generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String?

  @@map("user")
}

model Product {
  id               Int              @id @default(autoincrement())
  name             String
  description      String?
  images           Image[]
  parentProductId  Int?
  parentProduct    Product?         @relation("ParentChildrenProducts", fields: [parentProductId], references: [id])
  childrenProducts Product[]        @relation("ParentChildrenProducts")
  projectProducts  ProjectProduct[]

  @@map("product")
}

model Project {
  id              Int              @id @default(autoincrement())
  name            String
  description     String
  images          Image[]
  projectProducts ProjectProduct[]

  @@map("project")
}

model ProjectProduct {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int

  @@map("project_product")
}

model Image {
  id        Int      @id @default(autoincrement())
  url       String
  productId Int?
  product   Product? @relation(fields: [productId], references: [id])
  projectId Int?
  project   Project? @relation(fields: [projectId], references: [id])

  @@map("image")
}
